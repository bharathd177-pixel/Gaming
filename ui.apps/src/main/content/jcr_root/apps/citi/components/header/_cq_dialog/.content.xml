<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                <tabs jcr:primaryType="nt:unstructured" 	sling:resourceType="granite/ui/components/coral/foundation/tabs">
                    <items jcr:primaryType="nt:unstructured">
                            <topHeader jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                jcr:title="Top Header Properties">
                                <items jcr:primaryType="nt:unstructured">
                                    <citiLogo
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        enableNextGenDynamicMedia="{Boolean}true"
                                        fieldLabel="Logo"
                                        fileNameParameter="./logoName"
                                        fileReferenceParameter="./logoReference"
                                        mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                        name="./citiLogo"/>
                                    <language
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Language"
                                        name="./language"/>
                                    <signOnSection jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                        jcr:title="Sign On Section">
                                        <items jcr:primaryType="nt:unstructured">
                                            <signText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Sign on button name"
                                                name="./signText"/>
                                            <signOnMenu
                                                jcr:primaryType="nt:unstructured"
                                                fieldLabel="Sign On Menu List"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true">              
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./signOnMenu">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <signOnMenuName
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Sign On Menu Name"
                                                            name="./signOnMenuName" />
                                                        <signOnMenuUrl
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Sign On Menu Url"
                                                            name="./signOnMenuUrl" />
                                                    </items>
                                                </field>
                                            </signOnMenu>
                                        </items>
                                    </signOnSection>
                                </items>
                            </topHeader>
                            <megaMenuSec jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                jcr:title="Mega Menu Properties">
                                <items jcr:primaryType="nt:unstructured">
                                    <applyNow jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                        jcr:title="Apply Now Section">
                                        <items jcr:primaryType="nt:unstructured">
                                            <applyButtonText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Apply button name"
                                                name="./applyButtonText"/>
                                            <applyButtonUrl jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Url for Apply Now"
                                                fieldDescription="Enter the URL for the Apply Now button"
                                                rootPath="/content"
                                                name="./applyButtonUrl"/>
                                        </items>
                                    </applyNow>
                                    <megaMenu
                                        jcr:primaryType="nt:unstructured"
                                        fieldLabel="Mega Menu List"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true">              
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./megaMenu">
                                            <items jcr:primaryType="nt:unstructured">
                                                <menuItem
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Menu Item Name"
                                                    name="./menuItem" />
                                            </items>
                                        </field>
                                    </megaMenu>
                                </items>
                            </megaMenuSec>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>