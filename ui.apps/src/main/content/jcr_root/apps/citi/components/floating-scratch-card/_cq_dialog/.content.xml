<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Floating Scratch Card Configuration"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.commons.editor.dialog.childreneditor.v1]"
    helpPath="https://www.adobe.com/go/aem_cmp_title_v2"
    trackingFeature="cmp:title:v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Game Title"
                                name="./title"
                                value="Scratch &amp; Win!"/>
                            <buttonText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Button Text"
                                name="./buttonText"
                                value="ðŸŽ« SCRATCH CARD"/>
                            <modalTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Modal Title"
                                name="./modalTitle"
                                value="Scratch &amp; Win!"/>
                            <modalSubtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Modal Subtitle"
                                name="./modalSubtitle"
                                value="Enter your email and scratch the card to reveal your prize!"/>
                            <emailPlaceholder
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Email Placeholder"
                                name="./emailPlaceholder"
                                value="Enter your email to play"/>
                            <playButtonText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Play Button Text"
                                name="./playButtonText"
                                value="START SCRATCHING"/>
                            <scratchText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Scratch Instruction Text"
                                name="./scratchText"
                                value="Scratch here to reveal your prize!"/>
                        </items>
                    </general>
                    <prize
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Prize Configuration"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <prizes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Prizes">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./prizes">
                                    <items jcr:primaryType="nt:unstructured">
                                        <prizeText
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Prize Text"
                                            name="./prizeText"
                                            value="10% OFF"/>
                                        <prizeValue
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Prize Value/Description"
                                            name="./prizeValue"
                                            value="Save 10% on your next order"/>
                                        <prizeIcon
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Prize Icon (emoji)"
                                            name="./prizeIcon"
                                            value="ðŸŽ¯"/>
                                        <prizeColor
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                            fieldLabel="Prize Color"
                                            name="./prizeColor"
                                            value="#3b82f6"/>
                                        <probability
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                            fieldLabel="Probability (%)"
                                            name="./probability"
                                            value="25"/>
                                        <redeemCode
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Redeem Code"
                                            name="./redeemCode"
                                            placeholder="e.g., ABC123"/>
                                    </items>
                                </field>
                            </prizes>
                        </items>
                    </prize>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
