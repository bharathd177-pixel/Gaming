<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs jcr:primaryType="nt:unstructured" 	sling:resourceType="granite/ui/components/coral/foundation/tabs">
                        <items jcr:primaryType="nt:unstructured">
                            <spinWheelDefault jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                jcr:title="Spin Wheel Default Values">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
	                                    jcr:primaryType="nt:unstructured"             				sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Title"
                                        fieldDescription="Title"
                                        name="./title"/>            
                                    <buttonText
	                                    jcr:primaryType="nt:unstructured"             				sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Button Text"
                                        fieldDescription="Button Text"
                                        name="./buttonText"/>                                                
                                    <spinningText
	                                    jcr:primaryType="nt:unstructured"             				sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Spinning Text"
                                        fieldDescription="Spinning Text"
                                        name="./spinningText"/>                                                    
                                </items>
                            </spinWheelDefault>
                            <spinWheelSegments jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                jcr:title="Spin Wheel Segments">
                                <items jcr:primaryType="nt:unstructured">
                                    <segments
                                        jcr:primaryType="nt:unstructured"
                                        fieldLabel="Segments"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true">              
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./segments">
                                            <items jcr:primaryType="nt:unstructured">
                                                <segmentText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Segment Text"
                                                    name="./segmentText" />
                                                <segmentValue
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Segment Value"
                                                    name="./segmentValue" />
                                                <segmentColor
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Segment Color"
                                                    fieldDescription="Enter color (hex code like #FFC300 or color name like red)"
                                                    name="./segmentColor"/>                                                   
                                            </items>
                                        </field>
                                    </segments>                                                                                                            
                                </items>
                            </spinWheelSegments>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>