<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs jcr:primaryType="nt:unstructured" 	sling:resourceType="granite/ui/components/coral/foundation/tabs">
                        <items jcr:primaryType="nt:unstructured">
                            <scratchCardDefault jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                jcr:title="Scratch Card Default Values">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"             				
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Title"
                                        fieldDescription="Title"
                                        name="./title"/> 
                                </items>
                            </scratchCardDefault>
                            <prizes
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Prizes"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true">              
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./prizes">
                                    <items jcr:primaryType="nt:unstructured">
                                        <prizeName
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Prize Name"
                                            fieldDescription="Display name for the prize (e.g., '50% Off')"
                                            name="./prizeName" />
                                        <prizeCode
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Prize Code"
                                            fieldDescription="Code or value for the prize (e.g., 'SAVE50')"
                                            name="./prizeCode" />
                                        <bgColor
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Background Color"
                                            fieldDescription="Hex color code (e.g., #FFD700) or color name"
                                            name="./bgColor"/>
                                        <iconPath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                            enableNextGenDynamicMedia="{Boolean}true"
                                            fieldLabel="Prize Icon"
                                            fileNameParameter="./iconName"
                                            fileReferenceParameter="./iconReference"
                                            mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                            name="./iconPath"/>                                                   
                                    </items>
                                </field>
                            </prizes> 
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>